@model IEnumerable<EventRegistrationSystem.Domain.DTOs.RegistrationDto>

@{
    ViewData["Title"] = "Registrations";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Participant Name</th>
            <th>Email</th>
            <th>Number of Tickets</th>
            <th>Event Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var registration in Model)
        {
            <tr>
                <td>@registration.EventName</td>
                <td>@registration.ParticipantName</td>
                <td>@registration.EmailAddress</td>
                <td>@registration.NumberOfTickets</td>
                <td>@registration.EventType</td>
            </tr>
        }
    </tbody>
</table>

<a href="/Registration/Create" class="btn btn-primary btn-lg">New Registration</a>

<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: #fff;
    }
    .table th, .table td {
        padding: 0.75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }
    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
    }
    .table tbody + tbody {
        border-top: 2px solid #dee2e6;
    }
    .table .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }
    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
        line-height: 1.5;
        border-radius: 0.3rem;
    }
</style>
